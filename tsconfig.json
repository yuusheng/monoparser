{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    // "suppressImplicitAnyIndexErrors": true,
    "jsx": "preserve",
    "types": ["node", "vite/client"],
    "paths": {
      "@parser/md-parser": ["./packages/md-parser/src/index.ts"]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/playground/**",
    "**/test/dts/**"
  ]
}
